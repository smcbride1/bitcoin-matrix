<title><%= @wallet.name %></title>
<form method="GET" action="/wallets/<%= @wallet.id %>/edit">
    <input class="button" type="submit" id="edit" value="Edit">
</form>
<br>
<form method="POST" action="/wallets/<%= @wallet.id %>">
    <input type="hidden" name="_method" value="delete">
    <input class="button" type="submit" id="delete" value="Delete">
</form>
<br>
<h1><%= @wallet.name %></h1>
<br>
<h3>Restriction Type: <%= @wallet.restriction_type.capitalize %></h2>
<br>
<h3>BTC Balance: <%= @wallet.btc_balance %></h3>
<br>
<h3>USD Balance: <%= @wallet.usd_balance %></h3>
<br>
<form method="POST" action="/wallets/<%= @wallet.id %>/buy">
    <input class="textbox" type="text" id="buy_amount" name="buy_amount">
    <input class="button" type="submit" id="buy" value="Buy">
</form>
<br>
<form method="POST" action="/wallets/<%= @wallet.id %>/sell">
    <input class="textbox" type="text" id="sell_amount" name="sell_amount">
    <input class="button" type="submit" id="sell" value="Sell">
</form>
<br>
<br>

